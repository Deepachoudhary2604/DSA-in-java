class Solution {
    public boolean check(int[] arr) {
        int n=arr.length;
        int c=0;
        for(int i=1;i<arr.length;i++){
            if(arr[i]<arr[i-1]){
                c++;
            }
        }
        if(arr[n-1]>arr[0]){
            c++;
        }
        return c<=1;
    }
}
